generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Talent {
  id                 String   @id @default(uuid())
  avatar             String
  name               String
  mbti               String
  experience         Int
  lastEducation      String   @map("last_education")
  startEducationDate DateTime @map("start_education_date")
  endEducationDate   DateTime @map("end_education_date")

  projects Project[]

  @@map("talents")
}

model Project {
  id          String   @id @default(uuid())
  talentId    String   @map("talent_id")
  picture     String?
  name        String
  role        String
  startDate   DateTime @map("start_date")
  endDate     DateTime @map("end_date")
  description String

  talent Talent @relation(fields: [talentId], references: [id])

  @@map("projects")
}
